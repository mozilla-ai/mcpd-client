{
  "name": "mcpd-http-gateway",
  "version": "1.0.0",
  "description": "HTTP/HTTPS gateway for mcpd - expose MCP servers via REST API",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcpd-gateway": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:mcp": "node dist/mcp-http-endpoint.js",
    "dev": "tsx src/index.ts",
    "dev:mcp": "tsx src/mcp-http-endpoint.ts",
    "prepare": "npm run build"
  },
  "keywords": ["mcp", "mcpd", "http", "gateway", "api", "rest"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "axios": "^1.7.0",
    "dotenv": "^16.4.0",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "ws": "^8.16.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/morgan": "^1.9.0",
    "@types/ws": "^8.5.0",
    "@types/uuid": "^9.0.0",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}