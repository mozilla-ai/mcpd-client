{
  "name": "mcpd-client",
  "version": "1.1.6",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npm run build && electron .",
    "build": "webpack --mode production",
    "build:main": "webpack --config webpack.config.js --target 0",
    "build:renderer": "webpack --config webpack.config.js --target 1",
    "start": "npm run build && electron .",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexmeckes/mcpd-client.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/alexmeckes/mcpd-client/issues"
  },
  "homepage": "https://github.com/alexmeckes/mcpd-client#readme",
  "build": {
    "appId": "com.mcpd.client",
    "productName": "MCPD Client",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.4",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@iarna/toml": "^2.2.5",
    "@monaco-editor/react": "^4.7.0",
    "antd": "^5.27.0",
    "axios": "^1.11.0",
    "monaco-editor": "^0.52.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  }
}
